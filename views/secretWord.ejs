<!-- views/secretWord.ejs -->
<%- include("partials/head") %>
    <%- include("partials/header") %>

        <p>The secret word is: <%= secretWord %>
        </p>
        <p>Would you like to change it?</p>

        <form method="POST">
            <input type="hidden" name="_csrf_token" value="<%= csrf_token %>" /> <!-- Add CSRF token -->
            <label for="secretWord">Secret Word:</label>
            <input name="secretWord" id="secretWord" /><br />
            <button type="submit">Submit</button>
        </form>

        <%- include("partials/footer") %>